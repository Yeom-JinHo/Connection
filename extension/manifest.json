{
	"manifest_version": 3,
	"name": "Coalla",
	"description": "Extension for coalla",
	"version": "1.0",
	"action": {
		"default_popup": "popup.html",
		"default_icon": "koalla.png"
	},
	"content_scripts": [
		{
			"js": ["status.js"],
			"matches": ["https://www.acmicpc.net/status*"]
		}
	],
	"background": {
		"service_worker": "extension.js"
	},
	"externally_connectable": {
		"matches": ["http://localhost:3000/*", "https://www.coalla.co.kr/*"]
	}
}
